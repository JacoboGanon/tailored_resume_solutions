// Prisma schema for Better Auth
// learn more: https://better-auth.com/docs/concepts/database

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

model User {
  id            String    @id
  name          String    @db.Text
  email         String
  emailVerified Boolean   @default(false)
  image         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  posts         Post[]
  portfolio     Portfolio?
  resumes       Resume[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?  @db.Text
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String    @db.Text
  providerId            String    @db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String   @db.Text
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// Portfolio System Models

model Portfolio {
  id              String           @id @default(cuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Contact Info fields (previously JSON)
  name            String?
  email           String?
  phone           String?
  linkedin        String?
  github          String?
  website         String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  workExperiences WorkExperience[]
  educations      Education[]
  projects        Project[]
  achievements    Achievement[]
  skills          PortfolioSkill[]

  @@map("portfolio")
}

model WorkExperience {
  id           String    @id @default(cuid())
  portfolioId  String
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  jobTitle     String
  company      String
  location     String?
  startDate    DateTime
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  bulletPoints String[] @default([])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([portfolioId])
  @@map("work_experience")
}

model Education {
  id           String    @id @default(cuid())
  portfolioId  String
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  institution  String
  degree       String
  fieldOfStudy String
  gpa          String?
  minors       String[]  @default([])
  startDate    DateTime
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([portfolioId])
  @@map("education")
}

model Skill {
  id         String           @id @default(cuid())
  name       String           @unique
  category   String?
  isCommon   Boolean          @default(false)
  createdAt  DateTime         @default(now())
  portfolios PortfolioSkill[]

  @@index([isCommon])
  @@map("skill")
}

model PortfolioSkill {
  id          String    @id @default(cuid())
  portfolioId String
  skillId     String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  skill       Skill     @relation(fields: [skillId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([portfolioId, skillId])
  @@index([portfolioId])
  @@index([skillId])
  @@map("portfolio_skill")
}

model Project {
  id           String    @id @default(cuid())
  portfolioId  String
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  name         String
  description  String?   @db.Text
  bulletPoints String[]  @default([])
  technologies String[]  @default([])
  url          String?
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([portfolioId])
  @@map("project")
}

model Achievement {
  id          String    @id @default(cuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  title       String
  description String    @db.Text
  date        DateTime?
  category    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([portfolioId])
  @@map("achievement")
}

model CommonInstitution {
  id        String   @id @default(cuid())
  name      String   @unique
  type      String // university, college, bootcamp, etc
  createdAt DateTime @default(now())

  @@index([type])
  @@map("common_institution")
}

model Resume {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  jobDescription  String          @db.Text
  selectedItemIds Json            @db.JsonB
  pdfUrl          String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  atsAnalyses     ATSAnalysis[]
  modifiedVersions ModifiedResume[]

  @@index([userId])
  @@map("resume")
}

model ATSAnalysis {
  id                  String   @id @default(cuid())
  resumeId            String
  resume              Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  
  // Extracted structured data
  extractedJob        Json     @db.JsonB  // Job posting in JSON format
  extractedResume     Json     @db.JsonB  // Resume in JSON format
  
  // Scoring metrics
  overallScore        Float    // 0-100 composite score
  cosineSimilarity    Float    // Keyword vector similarity
  keywordMatchPercent Float    // % of job keywords in resume
  skillOverlapPercent Float    // % of required skills matched
  experienceRelevance Float    // Relevance of work experience
  
  // ATS recommendations
  recommendations     Json     @db.JsonB  // Array of improvement suggestions
  priorityKeywords    String[] // Keywords to emphasize
  missingSkills       String[] // Skills to add
  
  createdAt           DateTime @default(now())
  
  @@index([resumeId])
  @@map("ats_analysis")
}

model ModifiedResume {
  id                 String   @id @default(cuid())
  originalResumeId   String
  originalResume     Resume   @relation(fields: [originalResumeId], references: [id], onDelete: Cascade)
  
  name               String
  // Contact Info fields
  contactName        String?
  email              String?
  phone              String?
  linkedin           String?
  github             String?
  website            String?
  professionalSummary String? @db.Text
  
  modifications      Json     @db.JsonB  // Log of changes made
  atsScore           Float?   // ATS score after modifications
  
  createdAt          DateTime @default(now())
  
  // Relations
  workExperiences    ModifiedWorkExperience[]
  educations         ModifiedEducation[]
  projects           ModifiedProject[]
  achievements       ModifiedAchievement[]
  skills             ModifiedSkill[]
  
  @@index([originalResumeId])
  @@map("modified_resume")
}

model ModifiedWorkExperience {
  id           String         @id @default(cuid())
  modifiedResumeId String
  modifiedResume   ModifiedResume @relation(fields: [modifiedResumeId], references: [id], onDelete: Cascade)
  
  jobTitle     String
  company      String
  location     String?
  startDate    DateTime
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  bulletPoints String[]  @default([])
  
  createdAt    DateTime  @default(now())
  
  @@index([modifiedResumeId])
  @@map("modified_work_experience")
}

model ModifiedEducation {
  id           String         @id @default(cuid())
  modifiedResumeId String
  modifiedResume   ModifiedResume @relation(fields: [modifiedResumeId], references: [id], onDelete: Cascade)
  
  institution  String
  degree       String
  fieldOfStudy String
  gpa          String?
  startDate    DateTime
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  
  createdAt    DateTime  @default(now())
  
  @@index([modifiedResumeId])
  @@map("modified_education")
}

model ModifiedProject {
  id           String         @id @default(cuid())
  modifiedResumeId String
  modifiedResume   ModifiedResume @relation(fields: [modifiedResumeId], references: [id], onDelete: Cascade)
  
  name         String
  description  String?   @db.Text
  bulletPoints String[]  @default([])
  technologies String[]  @default([])
  url          String?
  
  createdAt    DateTime  @default(now())
  
  @@index([modifiedResumeId])
  @@map("modified_project")
}

model ModifiedAchievement {
  id          String         @id @default(cuid())
  modifiedResumeId String
  modifiedResume   ModifiedResume @relation(fields: [modifiedResumeId], references: [id], onDelete: Cascade)
  
  title       String
  description String    @db.Text
  date        DateTime?
  category    String
  
  createdAt   DateTime  @default(now())
  
  @@index([modifiedResumeId])
  @@map("modified_achievement")
}

model ModifiedSkill {
  id          String         @id @default(cuid())
  modifiedResumeId String
  modifiedResume   ModifiedResume @relation(fields: [modifiedResumeId], references: [id], onDelete: Cascade)
  
  name        String
  category    String?
  
  createdAt   DateTime  @default(now())
  
  @@index([modifiedResumeId])
  @@map("modified_skill")
}
